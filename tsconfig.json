{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "preserveWatchOutput": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "noEmit": true
  },
  "exclude": ["**/dist/**"]
}
